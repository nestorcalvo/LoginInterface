<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/editable">

    <TextView
            android:layout_width="121dp"
            android:layout_height="35dp"
            android:id="@+id/tvUserMain"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:textAlignment="gravity" android:shadowColor="@color/black" android:textColor="@color/white"
            android:shadowDx="5" android:shadowDy="10" android:shadowRadius="20" android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.514" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.345" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/user"
            android:layout_width="121dp"
            android:layout_height="35dp"
            android:id="@+id/tvDisplayUser"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:textAlignment="gravity" android:shadowColor="@color/black" android:textColor="@color/white"
            android:shadowDx="5" android:shadowDy="10" android:shadowRadius="20" android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.514" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.241" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/password"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/tvDisplayPwd"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:textAlignment="gravity" android:shadowColor="@color/black" android:textColor="@color/white"
            android:shadowDx="5" android:shadowDy="10" android:shadowRadius="20" android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.514" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="121dp"
            android:layout_height="35dp"
            android:id="@+id/tvPwdMain"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:textAlignment="gravity" android:shadowColor="@color/black" android:textColor="@color/white"
            android:shadowDx="5" android:shadowDy="10" android:shadowRadius="20" android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.514" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.61"/>


</androidx.constraintlayout.widget.ConstraintLayout>