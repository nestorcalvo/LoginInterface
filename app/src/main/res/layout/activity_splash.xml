<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivity"
        android:padding="0dp"
        android:background="@drawable/editable">

    <ImageView
            android:id="@+id/bgapp"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/splash" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="735dp"
              android:text="@string/finapptitle"
              android:textSize="100sp"
              android:textColor="#FBF4E7"
              android:gravity="center"
              android:fontFamily="@font/scriptmtbold"
              android:id="@+id/etTitle" android:shadowDx="5" android:shadowDy="10"
              android:shadowRadius="20" android:shadowColor="#000000"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="@+id/bgapp"
              app:layout_constraintBottom_toBottomOf="@+id/bgapp" app:layout_constraintVertical_bias="0.0"
              android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>