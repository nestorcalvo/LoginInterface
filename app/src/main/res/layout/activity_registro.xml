<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistroActivity"
        android:padding="20dp">

    <TextView
            android:text="@string/registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRegistro" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.08" android:textSize="30sp" android:textStyle="normal"
            android:textColor="@color/black" android:fontFamily="sans-serif-black"/>
    <TextView
            android:text="@string/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserRegister"
            app:layout_constraintTop_toBottomOf="@+id/tvRegistro" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="48dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.023"/>
    <TextView
            android:text="@string/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPassRegister"
            app:layout_constraintTop_toBottomOf="@+id/tvUserRegister" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="68dp"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.177"
            app:layout_constraintEnd_toStartOf="@+id/edRepPass"/>
    <Button
            android:text="@string/guardar"
            android:layout_width="115dp"
            android:layout_height="51dp"
            android:id="@+id/bnRegister" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edRepPass"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.176"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edPass" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edUser"
            app:layout_constraintStart_toEndOf="@+id/tvPassRegister" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/edUser"
            app:layout_constraintHorizontal_bias="0.18" app:layout_constraintStart_toStartOf="@+id/edUser"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/edUser"
            app:layout_constraintStart_toEndOf="@+id/tvUserRegister" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/tvRegistro"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edRepPass"
            app:layout_constraintStart_toEndOf="@+id/tvPassRegister" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edPass"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/edPass"
            app:layout_constraintStart_toStartOf="@+id/edPass"/>
</androidx.constraintlayout.widget.ConstraintLayout>